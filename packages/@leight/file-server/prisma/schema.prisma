generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This is just dummy placeholder for real user use could use
model User {
  id String @id @default(cuid())

  File File[]
}

model File {
    id       String @id @default(cuid())
    path     String
    name     String
    mime     String
    size     Int
    location String

    ttl     Int?
    created DateTime
    updated DateTime?
    userId  String?
    user    User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([userId, path, name])
}
