{
    "version": "0.5.0",
    "name": "@leight/context-client",
    "description": "Context helper stuff on client-side, including support for Zustand.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "types": "src/index.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build:esm": "tsc -p tsconfig.json -m es2022 --outDir lib/esm",
        "build:cjs": "tsc -p tsconfig.json",
        "build": "concurrently npm:build:*",
        "dev-watch:esm": "tsc -w -p tsconfig.json -m es2022 --outDir lib/esm --preserveWatchOutput",
        "dev-watch:cjs": "tsc -w -p tsconfig.json --preserveWatchOutput",
        "dev-watch": "concurrently npm:dev-watch:*",
        "lint": "eslint src"
    },
    "dependencies": {
        "@leight/utils": "*",
        "@leight/zustand": "*",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.13",
        "zustand": "^4.3.2"
    },
    "devDependencies": {
        "@leight/tsconfig": "*",
        "@leight/eslint-config-eslint": "*",
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.32.0",
        "eslint-plugin-unicorn": "^45.0.2",
        "path-to-regexp": "^6.2.1",
        "typescript": "^4.9.4"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme",
    "directories": {
        "lib": "lib"
    }
}
