{
    "version": "0.5.0",
    "name": "@leight/i18n-server",
    "description": "Some i18n server-side helper stuff.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "types": "src/index.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build:esm": "tsc -p tsconfig.json -m es2022 --outDir lib/esm",
        "build:cjs": "tsc -p tsconfig.json --outDir lib/cjs",
        "build": "concurrently npm:build:*",
        "dev-watch:esm": "tsc -w -p tsconfig.json -m es2022 --outDir lib/esm --preserveWatchOutput",
        "dev-watch:cjs": "tsc -w -p tsconfig.json --outDir lib/cjs --preserveWatchOutput",
        "dev-watch": "concurrently npm:dev-watch:*",
        "prisma-format": "npx dotenv -c development -- npx prisma format",
        "postinstall": "pnpm run prisma-format && prisma generate",
        "lint": "eslint src",
        "cleanup": "npx rimraf .turbo lib"
    },
    "dependencies": {
        "@leight/i18n": "*",
        "@prisma/client": "^4.9.0",
        "i18next": "^22.4.9",
        "next": "^13.1.5",
        "next-i18next": "^13.0.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^12.1.4",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^4.1.2"
    },
    "devDependencies": {
        "@leight/eslint-config-eslint": "*",
        "@leight/tsconfig": "*",
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "concurrently": "^7.6.0",
        "dotenv-cli": "^7.0.0",
        "eslint": "^8.32.0",
        "eslint-plugin-disable": "^2.0.3",
        "eslint-plugin-unicorn": "^45.0.2",
        "prisma": "^4.9.0",
        "typescript": "^4.9.4"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme",
    "directories": {
        "lib": "lib"
    }
}
