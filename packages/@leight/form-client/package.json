{
    "version": "0.5.0",
    "name": "@leight/form-client",
    "description": "Client-side form tools based on Mantine.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "dev": "turbowatch",
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/context": "^0.5.0",
        "@leight/context-client": "^0.5.0",
        "@leight/i18n": "^0.5.0",
        "@leight/i18n-client": "^0.5.0",
        "@leight/zod": "^0.5.0",
        "@leight/zustand": "^0.5.0",
        "@mantine/core": "^6.0.5",
        "@mantine/form": "^6.0.5",
        "@mantine/hooks": "^6.0.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@leight/esbuild": "^0.5.42",
        "@leight/eslint-config-eslint": "^0.5.51",
        "@leight/tsconfig": "^0.5.65",
        "@leight/turbowatch": "^0.5.30",
        "@types/node": "^18.15.0",
        "@types/react": "^18.0.28",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.36.0",
        "turbowatch": "^2.3.2",
        "typescript": "^5.0.2"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
