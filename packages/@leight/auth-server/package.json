{
    "version": "0.5.0",
    "name": "@leight/auth-server",
    "description": "Auth support on server-side.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "dev": "turbowatch",
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "concurrently npm:cleanup:*",
        "cleanup:sdk": "del-cli src/sdk/**",
        "cleanup:lib": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/container": "^0.5.0",
        "@leight/logger-server": "^0.5.0",
        "@leight/prisma": "^0.5.0",
        "@leight/user": "^0.5.0",
        "@next-auth/prisma-adapter": "^1.0.6",
        "next": "^13.0.0",
        "next-auth": "^4.22.1"
    },
    "devDependencies": {
        "@leight/esbuild": "^0.5.46",
        "@leight/eslint-config-eslint": "^0.5.55",
        "@leight/tsconfig": "^0.5.69",
        "@leight/turbowatch": "^0.5.34",
        "@types/node": "^18.15.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.36.0",
        "turbowatch": "^2.3.2",
        "typescript": "^5.0.4"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
