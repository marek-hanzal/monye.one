{
    "version": "0.5.27",
    "name": "@leight/job-client",
    "description": "Client-side job stuff.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "dev": "turbowatch",
        "generate": "del-cli src/sdk/** && concurrently npm:generate:*",
        "generate:sdk": "tsx src/leight-sdk.ts",
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/i18n": "^0.5.70",
        "@leight/i18n-client": "^0.5.70",
        "@leight/job": "^0.5.76",
        "@leight/query-client": "^0.5.32",
        "@leight/sdk": "^0.5.23",
        "@leight/source": "^0.5.64",
        "@leight/source-client": "^0.5.35",
        "@leight/utils": "^0.5.67",
        "@mantine/core": "^6.0.5",
        "@mantine/hooks": "^6.0.5",
        "@mantine/notifications": "^6.0.1",
        "@tabler/icons-react": "^2.10.0",
        "react": "^18.2.0",
        "tsx": "^3.12.6"
    },
    "devDependencies": {
        "@leight/esbuild": "^0.5.43",
        "@leight/eslint-config-eslint": "^0.5.52",
        "@leight/tsconfig": "^0.5.66",
        "@leight/turbowatch": "^0.5.31",
        "@types/node": "^18.15.0",
        "@types/react": "^18.0.28",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.36.0",
        "turbowatch": "^2.3.2",
        "typescript": "^5.0.2"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
