{
  "extends": "@leight/tsconfig/common.json",
  "compilerOptions": {
    "paths": {
      "@/monye.one": [
        "."
      ],
      "@/monye.one/*": [
        "./src/*"
      ],
      "@/monye.one/assets/*": [
        "./public/assets/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "@leight/i18n"
    ],
    "noEmit": true,
    "module": "esnext",
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
